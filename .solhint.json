{
  "extends": "solhint:recommended",
  "rules": {
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "compiler-version": "off",
    "no-empty-blocks": "off",
    "compiler-fixed": "off",
    "indent": 2,
    "max-line-length": "off",
    "max-states-count": "off"
  }
}
